<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripbook">
    <!-- Replace with your actual package -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".TripBookApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripBook"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.android.tripbook.view.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.tripbook.view.HomeActivity"
            android:exported="false" /> <!-- Launch RegisterActivity instead -->
        <activity
            android:name="com.android.tripbook.view.RegisterActivity"
            android:exported="true"
            android:label="Register"
            android:theme="@style/Theme.TripBook"></activity>
    </application>

</manifest>
