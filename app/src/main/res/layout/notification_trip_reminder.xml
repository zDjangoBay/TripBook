<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/notification_bg_reminder"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_reminder"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_alarm"
        android:tint="@color/warning_orange" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rappel de voyage"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/message_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Votre voyage est demain !"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>